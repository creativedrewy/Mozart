<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeLiveWallpaper">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeLiveWallpaper">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.creativedrewy.mozartexamples.wallpapers.SimpleComposeWallpaper"
            android:enabled="true"
            android:label="Simple Compose"
            android:exported="true"
            android:permission="android.permission.BIND_WALLPAPER" >

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>

        <service
            android:name="com.creativedrewy.mozartexamples.wallpapers.JellyfishWallpaperService"
            android:enabled="true"
            android:label="Jellyfish"
            android:exported="true"
            android:permission="android.permission.BIND_WALLPAPER" >

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>

        <service
            android:name="com.creativedrewy.mozartexamples.wallpapers.ConfettiWallpaperService"
            android:enabled="true"
            android:label="Fireworks"
            android:exported="true"
            android:permission="android.permission.BIND_WALLPAPER" >

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>


        <service
            android:name="com.creativedrewy.mozartexamples.wallpapers.FilamentWallpaperService"
            android:enabled="true"
            android:label="Filament"
            android:exported="true"
            android:permission="android.permission.BIND_WALLPAPER" >

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>

        <service
            android:name="com.creativedrewy.mozartexamples.wallpapers.DependencyInjectionWallpaper"
            android:enabled="true"
            android:label="Filament"
            android:exported="true"
            android:permission="android.permission.BIND_WALLPAPER" >

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>
    </application>

</manifest>